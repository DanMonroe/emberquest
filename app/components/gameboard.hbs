<div class="game">
  <div class="game-container">
    <div class="epm-modal-container {{this.epmModalContainerClass}}">
      <EpmModalContainer />
    </div>
    <div class="header">
      <h2>EmberQuest</h2>
      <div class="game-controls">
        <button type="button" class="btn inventory" {{on "click" (fn this.showInventory)}} >
          <EmberTooltip tooltipClass="tooltip-controls" >Inventory</EmberTooltip>
        </button>
        <button type="button" class="btn trophy" {{on "click" (fn this.saveGame)}}>
          <EmberTooltip tooltipClass="tooltip-controls" >Awards</EmberTooltip>
        </button>
        <button type="button" class="btn gems" {{on "click" (fn this.clickGems)}}>
          <EmberTooltip tooltipClass="tooltip-controls">Gems</EmberTooltip>
        </button>
        <button type="button" class="btn settings" {{on "click" (fn this.showConfigDialog)}} >
          <EmberTooltip tooltipClass="tooltip-controls" >Settings</EmberTooltip>
        </button>
      </div>
    </div>
    <div class="board"
      {{did-insert this.setup}}
      {{will-destroy this.teardown}}
    >
      <figure id="gameContainer" />
    </div>
  </div>
</div>

